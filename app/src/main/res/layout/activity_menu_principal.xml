<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bo.Androides.MiCafe.MenuPrincipal">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/navigationDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondopantallas">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMenúPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="#FFEB3B"
                    android:gravity="center"
                    android:text="MENÚ PRINCIPAL" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="229dp"
                    android:layout_height="97dp" />

                <Button
                    android:id="@+id/buttonBebidas"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:onClick="bebidasClick"
                    android:text="BEBIDAS" />

                <Button
                    android:id="@+id/buttonPlatosALaCarta"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:onClick="platosALaCartaClick"
                    android:text="PLATOS A LA CARTA"
                    />
                <Button
                    android:id="@+id/buttonSnackYDulces"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:onClick="snackYDulcesClick"
                    android:text="SNACK Y DULCES "
                    />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <include layout="@layout/header_navview"></include>

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
