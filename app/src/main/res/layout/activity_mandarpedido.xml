<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_lg"
        tools:context=".LoginActivity">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondopantallas"
            app:srcCompat="@drawable/fondopantallas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewReservarPedido"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="MANDAR PEDIDO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="34dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/atras" />

            <TextView
                android:id="@+id/textViewHorarioDe"
                android:layout_width="229dp"
                android:layout_height="97dp"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#9C27B0"
                tools:text="Ubicacion:" />

            <Button
                android:id="@+id/buttonCurso"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:onClick="registrarClick"
                android:text="@string/title"
                tools:text="Cursos" />

            <Button
                android:id="@+id/buttonEfectivo"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:onClick="eliminarDatos"
                android:text="@string/title"
                tools:text="Administracion" />

            <TextView
                android:id="@+id/textViewPlanDePagos"
                android:layout_width="255dp"
                android:layout_height="113dp"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#9C27B0"
                tools:text="Haz Especificaciones." />


        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>>