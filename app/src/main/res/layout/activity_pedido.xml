<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondopantallas"
        app:srcCompat="@drawable/fondopantallas" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_lg"
        tools:context=".LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPedido"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="PEDIDO" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="293dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewAnadirAlgoMas"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="¿Deseas Añadir Algo Mas A Tu Pedido?" />

            <Button
                android:id="@+id/buttonReservarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="registrarClick"
                android:text="Reservar Pedido" />

            <Button
                android:id="@+id/buttonMandarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminarDatos"
                android:text="Mandar Pedido" />

            <Button
                android:id="@+id/buttonCancelarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar Pedido" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>