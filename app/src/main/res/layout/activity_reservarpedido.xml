<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondopantallas"
        app:srcCompat="@drawable/fondopantallas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewReservarPedido"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="@string/title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="RESERVAR PEDIDO" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_lg"
        tools:context=".LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="34dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/atras" />

            <TextView
                android:id="@+id/textViewHorarioDe"
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:background="#75FCD5"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Entrega Del Pedido." />

            <TextView
                android:id="@+id/textViewHora"
                android:layout_width="67dp"
                android:layout_height="33dp"
                android:background="#F502CB"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Hora:" />

            <TextView
                android:id="@+id/textViewMinutos"
                android:layout_width="67dp"
                android:layout_height="32dp"
                android:background="#F502CB"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Minutos:" />

            <TextView
                android:id="@+id/textViewDescripcionDeTuPedido"
                android:layout_width="match_parent"
                android:layout_height="291dp"
                android:background="#FFEB3B"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Descripcion de tu pedido:" />

            <TextView
                android:id="@+id/textViewPlanDePagos"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignStart="@+id/null"
                android:background="#75FCD5"
                android:gravity="center"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Opciones de pago" />

            <Button
                android:id="@+id/buttonEfectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminarDatos"
                android:text="Efectivo" />

            <Button
                android:id="@+id/buttonTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta" />


        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>